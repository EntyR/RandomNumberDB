<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:topLeftRadius="@dimen/fullscreen_shade_radius"
                android:topRightRadius="@dimen/fullscreen_shade_radius" />
            <gradient
                android:angle="90"
                android:endColor="@android:color/transparent"

                android:startColor="@color/dark_grey" />
        </shape>

    </item>
    <item android:bottom="@dimen/fullscreen_shade_padding">
        <shape>
            <corners
                android:topLeftRadius="@dimen/fullscreen_shade_radius"
                android:topRightRadius="@dimen/fullscreen_shade_radius" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>