<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#EAEAEA">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btItemValue"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:layout_marginEnd="@dimen/list_item_horizontal_margin"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:background="@drawable/rounded_button_shape_selector"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="@integer/list_item_letter_spacing"
        android:paddingStart="14dp"
        android:singleLine="true"
        android:paddingEnd="14dp"
        android:textAllCaps="false"
        android:textColor="@drawable/rounded_button_text_color_selector"
        android:textSize="@dimen/list_item_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Button" />
</androidx.constraintlayout.widget.ConstraintLayout>