<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#EAEAEA">

    <Button
        android:id="@+id/btItemValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:layout_marginEnd="@dimen/list_item_horizontal_margin"
        android:layout_marginBottom="@dimen/list_item_horizontal_margin"
        android:background="@drawable/rounded_button_shape_selector"
        android:textAllCaps="false"
        android:textColor="@drawable/rounded_button_text_color_selector"
        android:textStyle="bold"
        app:backgroundTint="@drawable/button_pressed_color_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Button" />
</androidx.constraintlayout.widget.ConstraintLayout>